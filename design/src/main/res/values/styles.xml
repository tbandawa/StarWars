<resources>

    <!-- Base application theme -->
    <style name="Theme.StarWars" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorGray</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColorSecondary">@color/colorGray</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <!-- ToolBar text styling -->
    <style name="Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Retry Button styling -->
    <style name="StarWars.Button.TextIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="shapeAppearance">@style/buttonShape</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.StarWars.Button</item>
    </style>

    <style name="buttonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.StarWars.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>