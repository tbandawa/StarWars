<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="planet"
            type="starwars.data.model.Planet" />

        <variable
            name="resourceClickListener"
            type="starwars.search.ui.ResourceClickListener" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:onClick="@{() -> resourceClickListener.onClick(planet.url)}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="@{planet.name}"
                    tools:text="Name"/>

                <TextView
                    android:id="@+id/textPopulation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:layout_constraintTop_toBottomOf="@id/textName"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:text='@{"Population: " + planet.population}'
                    tools:text="Population: 3000000"/>

                <TextView
                    android:id="@+id/textTerrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textPopulation"
                    app:layout_constraintEnd_toEndOf="@+id/textPopulation"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp"
                    android:text='@{"Terrain: " + planet.terrain}'
                    tools:text="Terrain: desert"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>