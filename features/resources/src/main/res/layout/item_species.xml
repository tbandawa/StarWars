<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="species"
            type="starwars.data.model.Species" />

        <variable
            name="resourceClickListener"
            type="starwars.resources.ui.ResourceClickListener" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:onClick="@{() -> resourceClickListener.onClick(species.url)}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:text="@{species.name}"
                    tools:text="Name"/>

                <TextView
                    android:id="@+id/textClassification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:layout_constraintTop_toBottomOf="@id/textName"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:text='@{"Classification: " + species.classification}'
                    tools:text="Classification: amphibian"/>

                <TextView
                    android:id="@+id/textLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textClassification"
                    app:layout_constraintEnd_toEndOf="@+id/textClassification"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp"
                    android:text='@{"Language: " + species.language}'
                    tools:text="Language: language"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>